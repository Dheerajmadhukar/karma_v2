	[ "$silent" == "False" ] && echo   '.%%%%%%%%%////,%%%%%%%//%///%%%%@@@@%%%////%%/////%%%,/;%%%%%%%%/%%% 		' >&2
	[ "$silent" == "False" ] && echo   '%/%%%%%%%/////,%%%%///%%////%%%@@@@@%%%///%%/%%%%%//%,////%%%%//%%% 		' >&2
	[ "$silent" == "False" ] && echo   '%//%%%%%//////,%/%a\`   a%///%%%@@@@@@%%////a    a%%%%,//%///%/%%%%% 		' >&2
	[ "$silent" == "False" ] && echo   '%///%%%%%%///,%%%%@@aa@@%//%%%@@@@S@@@%%///@@aa@@%%%%%,/%////%%%%% 		' >&2
	[ "$silent" == "False" ] && echo   '%%//%%%%%%%//,%%%%%///////%%%@S@@@@SS@@@%%/////%%%%%%%,%////%%%%%		' >&2
	[ "$silent" == "False" ] && echo   '%%//%%%%%%%//,%%%%/////%%@%@SS@@@@@@@S@@@@%%%%/////%%%,////%%%%%		' >&2 
