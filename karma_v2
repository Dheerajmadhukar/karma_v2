banner(){ 
	[ "$silent" == "False" ] && printf "${logo}" >&2
	[ "$silent" == "False" ] && echo      '				..,,,,,,,,,.. 					' >&2
	[ "$silent" == "False" ] && echo   '                     .,;%%%%%%%%%%%%%%%%%%%%;,. 					' >&2
	[ "$silent" == "False" ] && echo   '                   %%%%%%%%%%%%%%%%%%%%////%%%%%%, .,;%%;,			' >&2 
	[ "$silent" == "False" ] && echo   '            .;%/,%%%%%/////%%%%%%%%%%%%%%////%%%%,%%//%%%, 			' >&2
	[ "$silent" == "False" ] && echo   '        .,;%%%%/,%%%///%%%%%%%%%%%%%%%%%%%%%%%%%%%%,////%%%%;, 			' >&2
	[ "$silent" == "False" ] && echo   '     .,%%%%%%//,%%%%%%%%%%%%%%%%@@%a%%%%%%%%%%%%%%%%,%%/%%%%%%%;, 		' >&2
	[ "$silent" == "False" ] && echo   '   .,%//%%%%//,%%%%///////%%%%%%%@@@%%%%%%///////%%%%,%%//%%%%%%%%, 		' >&2
