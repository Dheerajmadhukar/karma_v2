	[ "$silent" == "False" ] && echo   '                 \@@@@@@@@@@@@@Ss,sS@@@@@@@@@@@./ 				' >&2
	[ "$silent" == "False" ] && echo   '                  \@@@@@@@@@@@@@.@@@@@@@@@@@.// 				' >&2
	[ "$silent" == "False" ] && echo   '                   \00aaaaaaaaa00a00aaaaaaa00/ 					' >&2
	[ "$silent" == "False" ] && echo   '                    \@@000000000000000000@@@/					' >&2
	[ "$silent" == "False" ] && echo   '                     00000000000000@@@@@@@@@ 					' >&2
	[ "$silent" == "False" ] && printf "${logo}â•­â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•®${end}\n" >&2
    [ "$silent" == "False" ] && printf "  ${greenbg} ${program} ${end}\t\t\t\t\t${green}KARMA IS MY BITCH.....ðŸ§ ${end}\n\n" >&2
    [ "$silent" == "False" ] && printf "${logo}\t\t - https://github.com/Dheerajmadhukar${end}\n" >&2
	[ "$silent" == "False" ] && printf "${logo}\t\t - https://twitter.com/Dheerajmadhukar${end}\n" >&2
    [ "$silent" == "False" ] && printf "${logo}â•°â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•¯${end}\n" >&2
